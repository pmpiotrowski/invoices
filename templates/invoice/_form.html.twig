        </div>
        <div class="row">
            <div class="col">
                {{ form_row(form.seller_postal_code) }}
            </div>
        </div>
        <div class="row">
            <div class="col">
                {{ form_row(form.seller_city) }}
            </div>
        </div>
        <div class="row">
            <div class="col">
                {{ form_row(form.seller_account_bank_number) }}
            </div>
        </div>
        <div class="row">
            <div class="col">
                {{ form_row(form.seller_bank) }}
            </div>
        </div>
    </div>
    <div class="col">
        <h3>Nabywca</h3>
        <div class="row">
            <div class="col">
                {{ form_row(form.buyer_type) }}
            </div>
        </div>
        <div class="row">
            <div class="col">
                {{ form_row(form.buyer_name) }}
            </div>
        </div>
        <div class="row">
            <div class="col">
                {{ form_row(form.buyer_nip) }}
            </div>
        </div>
