        {{ form_row(form.invoicing_date) }}
    </div>
    <div class="col" id="some-custom-id">
        {{ form_row(form.invoicing_place) }}
    </div>
    <div class="col" id="some-custom-id">
        {{ form_row(form.sale_date) }}
    </div>
</div>
<hr/>
<div class="row">
    <div class="col">
        <h3>Sprzedawca</h3>
        <div class="row">
            <div class="col">
